# ProjMAN Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# REQUIRED - AI Provider
OPENROUTER_API_KEY=sk-or-v1-your-api-key-here

# OPTIONAL - AI Configuration
OPENROUTER_MODEL=anthropic/haiku-4.5
APP_URL=http://localhost:8000

# Database
DATABASE_URL=postgresql://demo:demo123@localhost:5432/agentize_demo

# Redis
REDIS_URL=redis://localhost:6379/0

# S3/MinIO Storage
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=agentize

# Jira Integration
JIRA_URL=https://yourcompany.atlassian.net
JIRA_API_TOKEN=your-jira-api-token
JIRA_PROJECT_KEY=PROJ
JIRA_EMAIL=your-email@company.com

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=your-email@gmail.com

# Microsoft Teams
TEAMS_CLIENT_ID=your-azure-app-client-id
TEAMS_CLIENT_SECRET=your-azure-app-client-secret
TEAMS_TENANT_ID=your-tenant-id

# Application
ENVIRONMENT=development
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1
